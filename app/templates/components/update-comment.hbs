{{#if updateCommentForm}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=comment.title}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=comment.date}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=comment.author}}
      </div>
      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text" placeholder=comment.text}}
      </div>
      <button class="btn btn-default" {{action 'update' comment}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default btn-xs" {{action 'updateCommentForm'}}>Update</button>
{{/if}}
