{{#if updatePostForm}}
  <h4>Update {{post.title}}</h4>
  <div>
    <form class="boxed">
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>
      <div class="form-group">
        <label for="text">text</label>
        {{input value=text id="text" placeholder=post.text}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>
      <button class="btn btn-default" {{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'updatePostForm'}}>Update</button>
{{/if}}
